    "version": "0.2.0",
    "configurations": [
        {
            "name": "test root",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}"
        },
        {
            "name": "test lisp files",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/",
            "args": [
                "-test.run",
                "TestFileTests"
            ]
        },
        {
            "name": "test calls",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/lib/call"
        },
        {
            "name": "Lisp REPL",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lisp"
        },
        {
            "name": "MAL",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/lisp",
            "args": [
                "./examples/mal.lisp"
            ]
        },
        {
            "name": "Reader",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/reader"
        }
    ]
}